<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "edu.apimagic.domain.model.Category" table = "Category">
        <id name = "id" type = "long" column = "id">
            <generator class="native"/>
        </id>
        <property name = "code" column = "code" type = "string"/>
        <property name = "name" column = "name" type = "string"/>
        <property name = "permalink" column = "permalink" type = "string"/>
    </class>
    <query name="findCategoryByCodeAndName" >
        <![CDATA[from Category c where c.code=:code and c.name=:name]]>
    </query>
</hibernate-mapping>