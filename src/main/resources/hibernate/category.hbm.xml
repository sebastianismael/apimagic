<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "edu.apimagic.domain.model.Category" table = "Category">
        <id name = "id" type = "long" column = "id">
            <generator class="native"/>
        </id>
        <property name = "codigo" column = "codigo" type = "string"/>
        <property name = "nombre" column = "nombre" type = "string"/>
        <property name = "permalink" column = "permalink" type = "string"/>
    </class>
    <query name="findCategoryByCodeAndName" >
        <![CDATA[from Category c where c.codigo=:code and c.nombre=:name]]>
    </query>
</hibernate-mapping>